/* components/book/index.wxss */
.container {
    width: 240rpx;
    height: 360rpx;
    position: relative;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.container image {
    width: 100%;
    height: 100%;
    border-radius: 2px;
}

.description {
    width: 216rpx;
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    padding: 5rpx 10rpx 8rpx 15rpx;
    font-size: 24rpx;
    border-radius: 0 0 2px 2px;
}

.title {
    margin-top: 30rpx;
    text-overflow: ellipsis;
    white-space: normal;
    overflow: hidden;
}

.author {
    font-size: 20rpx;
    color: #999;
    margin-bottom: 10rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.foot {
    font-size: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.footer {
    color: #666;
}
