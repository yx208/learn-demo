.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.sub-container {
    width: 100%;
    margin-top: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
}

.box {
    width: 700rpx;
    height: 68rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50rpx;
    background-color: #f5f5f5;
    color: #999;
}

.header {
    width: 100%;
    height: 100rpx;
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    box-shadow: 0 0 3px #e3e3e3;
    z-index: 999;
}

.head-img {
    width: 100rpx;
    height: 34rpx;
    margin-top: 40rpx;
}

.box image {
    margin-right: 10px;
    width: 14px;
    height: 14px;
}

.books-container {
    margin-top: 10rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 90rpx;
}

.books-container i-book {
    margin-bottom: 20rpx;
}

