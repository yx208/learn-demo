.container {
    display: flex;
    align-items: center;
    flex-direction: column;
}

.wrap {
    position: relative;
    margin-top: 60rpx;
}

.cover {
    width: 422rpx;
    height: 422rpx;
    border-radius: 50%;
}

.player-img {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.tag {
    width: 44rpx;
    position: relative;
    right: 320rpx;
    transform: translateY(-50%);
}

