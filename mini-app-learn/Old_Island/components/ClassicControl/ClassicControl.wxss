.classic-control {
  position: absolute;
  left: 50%;
  bottom: 6%;
  transform: translateX(-50%);
  padding: 0 14px;
  width: 80%;
  height: 100rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #5a5a5a;
}

.cc-next,
.cc-prev {
  font-size: 0;
  line-height: 1;
  width: 30rpx;
  height: 40rpx;
}

.cc-next .cc-icon,
.cc-prev .cc-icon {
  width: 100%;
  height: 100%;
}


