.container {
  padding: 40rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
}

.detail-short-comment {}

.detail-short-comment .dsc-title {
  text-align: center;
  color: #2f2f2f;
  font-size: 18px;
  margin-bottom: 30rpx;
}

.detail-short-comment .dsc-list {
  display: flex;
  flex-wrap: wrap;
}

.dsc-list .dsc-item {
  margin: 0 10px 10px 0;
  background-color: #f5f5f5;
  padding: 4px 10px;
  font-size: 14px;
  color: #656565;
}

.dsc-item .dsc-item-nums {
  font-size: 12px;
  color: #aaa;
}

.dsc-list .dsc-item:first-child {
  background-color: #fefbde;
}

.dsc-list .dsc-item:nth-child(2) {
  background-color: #edfcfe;
}


