.ex-tag1 {
    background-color: #fffbdd !important;
}

.ex-tag2 {
    background-color: #eefbff !important;
}

.content {
    text-indent: 2em;
}

.detail-container {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    margin-bottom: 100rpx;
    font-size: 28rpx;
    color: #666;
}

.vertical {
    display: flex;
    flex-direction: column;
}

.description {
    color: #999;
    margin-right: 40rpx;
}

.post-container {
    width: 690rpx;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    background-color: #fff;
}

.post-fake {
    width: 460rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    border: 1px solid #999;
    border-radius: 16px;
    font-size: 22rpx;
    padding-left: 22rpx;
}

.like-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.like {
    margin: 10rpx 30rpx 0 0;
}

.posting-container {
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    z-index: 999;
}

.post-header {
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cancel {
    color: #666;
}

.post-header text {
    padding: 25rpx;
}

.post-header > text:first-child {
    font-size: 28rpx;
    color: #bbb;
}

.posting-container .comment-container {
    width: 690rpx;
    padding: 40rpx 30rpx 0 30rpx;
}

.post {
    width: 690rpx;
    height: 56rpx;
    margin: 30rpx auto;
    font-size: 28rpx;
    background-color: #f5f5f5;
    border-radius: 16px;
    padding-left: 26rpx;
}

.shadow {
    color: #999;
}
