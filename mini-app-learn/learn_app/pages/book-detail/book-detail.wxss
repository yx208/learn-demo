.container {
    width: 100%;
    background-color: #f5f5f5;
}

.head {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    padding: 40rpx 0;
}

.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}

.author {
    font-size: 28rpx;
    color: #999;
}

.sub-container {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    padding: 30rpx;
    background-color: #fff;
}

.headline {
    font-size: 32rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx; 
}

.comment-container {
    display: flex;
    flex-wrap: wrap;
}

.comment-container i-tag {
    margin: 0 16rpx 10rpx 0;
}

.nums {
    margin-left: 10rpx;
    font-size: 22rpx;
    color: #aaa;
}

