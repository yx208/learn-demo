.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.content {
    width: 100%;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-right: 30rpx;
}

.share-btn {
    padding: 30rpx 0 30rpx 30rpx;
}

.share-btn > button {
    width: 30rpx !important;
}

.share {
    width: 30rpx;
    height: 30rpx;
}