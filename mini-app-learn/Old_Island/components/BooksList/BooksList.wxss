.books-list {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 120rpx;
}

.books-list .bl-title {
  text-align: center;
  font-size: 0;
  padding: 40rpx 0;
}

.bl-title .bl-title-image {
  width: 120rpx;
}

.books-list .bl-container {
  width: 100%;
  height: auto;
}

.books-list .bl-item {
  width: 35%;
  text-align: center;
  float: left;
  font-size: 14px;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
  background-color: #fff;
  text-align: left;
}

.books-list .bl-item:nth-child(odd) {
  margin: 0 10% 60rpx 10%;
}

.bl-item .item-cover-container {
  width: 100%;
  height: 260rpx;
  overflow: hidden;
}

.item-cover-container .item-cover-wrap {
  width: 100%;
}

.item-cover-wrap .item-cover {
  width: 100%;
  height: 340rpx;
}

.bl-item .bl-item-content {
  padding: 20rpx;
  overflow: hidden;
}

.bl-item .bl-one-line {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bl-item-content .bl-item-title {
  color: #212121;
  font-size: 14px;
}

.bl-item-content .bl-item-author {
  color: #acacac;
  font-size: 12px;
}

.bl-item-content .bl-item-info {
  font-size: 12px;
  color: #212121;
  display: flex;
  justify-content: flex-end;
  text-align: right;
  margin-top: 20rpx;
}
