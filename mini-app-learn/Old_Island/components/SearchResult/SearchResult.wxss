.one-line {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-result {
  width: 100%;
  height: auto;
  background-color: #fff;
}

.search-result .sr-item {
  width: 35%;
  float: left;
  box-shadow: 2px 2px 6px rgba(0, 0, 0, .1);
}

.search-result .sr-item:nth-child(odd) {
  margin: 0 10% 50rpx 10%;
}

.sr-item .sr-cover-wrap {
  width: 100%;
  height: 320rpx;
  overflow: hidden;
}

.sr-cover-wrap .sr-cover-container { width: 100%; }
.sr-cover-container .sr-cover { width: 100%; }

.sr-item .sr-item-info {
  padding: 10px;
  overflow: hidden;
}

.sr-item-info .sr-info-title {
  font-size: 14px;
  line-height: 1.5;
}

.sr-item-info .sr-info-authors {
  font-size: 10px;
  line-height: 15px;
  height: 15px;
  color: #999;
}
