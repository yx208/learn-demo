.search-history {
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
}

.search-history .sh-search,
.search-history .sh-hot {
  margin: 40rpx 0;
}

.search-history .sh-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.sh-list .sh-list-item {
  padding: 6px;
  line-height: 1;
  background-color: #f7f7f7;
  margin-right: 20rpx;
  color: #656565;
}

.search-history .sh-title {
  color: #333;
}

.search-history .sh-title::before {
  content: "";
  display: inline-block;
  width: 4px;
  height: 14px;
  background-color: #333;
  margin-right: 16rpx;
  line-height: 1;
}
