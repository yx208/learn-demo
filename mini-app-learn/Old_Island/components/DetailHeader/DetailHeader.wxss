.detail-header {
  text-align: center;
  padding: 40rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
}

.detail-header .detail-header-cover-wrap {
  width: 30%;
  font-size: 0;
  margin: 0 auto;
  box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.1);
}

.detail-header-cover-wrap .detail-header-cover {
  width: 100%;
}

.detail-header .detail-header-title {
  margin-top: 20rpx;
  font-size: 18px;
  color: #2f2f2f;
  line-height: 1.5;
}

.detail-header .detail-header-author {
  color: #999999;
  font-size: 14px;
  line-height: 1.5;
}